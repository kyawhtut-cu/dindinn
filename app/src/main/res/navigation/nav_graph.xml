<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/order">

    <fragment
        android:id="@+id/order"
        android:name="com.kyawhut.codetest.order.ui.order.OrderFragment"
        android:label="@string/order_fragment_label"
        tools:layout="@layout/fragment_order">

        <action
            android:id="@+id/action_order_to_ingredient"
            app:destination="@id/ingredient" />
    </fragment>

    <fragment
        android:id="@+id/ingredient"
        android:name="com.kyawhut.codetest.order.ui.ingredient.IngredientFragment"
        android:label="@string/ingredient_fragment_label"
        tools:layout="@layout/fragment_ingredient"/>

</navigation>
